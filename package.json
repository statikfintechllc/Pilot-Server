{
    "name": "Pilot-Server",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "node scripts/dev.mjs",
        "dev:server": "node scripts/server.js",
        "dev:full": "concurrently \"npm run dev:server\" \"npm run dev\"",
        "kill": "fuser -k 5000/tcp",
        "build": "node scripts/build.mjs && npm run build:css",
        "build:css": "postcss src/main.css -o dist/assets/main.css",
        "lint": "eslint .",
        "preview": "node scripts/server.js",
        "validate:imports": "node scripts/validate-imports.cjs",
        "validate:api-usage": "node scripts/validate-api-usage.cjs",
        "validate:error-handling": "node scripts/validate-error-handling.cjs",
        "validate:all": "npm run validate:imports && npm run validate:api-usage && npm run validate:error-handling",
        "test:quality": "npm run lint && npm run validate:all && npm run build",
        "test:device-flow": "node -e \"fetch('http://localhost:3001/auth/device-flow/initiate', {method: 'POST', headers: {'Content-Type': 'application/json'}}).then(r => r.json()).then(console.log).catch(console.error)\"",
        "start:ios": "npm run dev:server"
    },
    "dependencies": {
        "@octokit/core": "^6.1.4",
        "@supabase/ssr": "^0.7.0",
        "@supabase/supabase-js": "^2.75.1",
        "clsx": "^2.1.1",
        "cors": "^2.8.5",
        "d3": "^7.9.0",
        "date-fns": "^4.1.0",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "highlight.js": "^11.10.0",
        "marked": "^16.4.1",
        "node-fetch": "^3.3.2",
        "octokit": "^4.1.2",
        "openai": "^6.5.0",
        "tailwind-merge": "^3.3.1",
        "uuid": "^11.1.0",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@tailwindcss/postcss": "^4.1.8",
        "@types/node": "^22.10.0",
        "autoprefixer": "^10.4.20",
        "esbuild": "^0.24.2",
        "eslint": "^9.28.0",
        "globals": "^16.0.0",
        "postcss": "^8.4.49",
        "postcss-cli": "^11.0.0",
        "tailwindcss": "^4.1.11",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.42.0"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    }
}
