<!-- Card Component -->
{% assign theme = include.theme | default: '' %}

<div class="card {{ theme }} {{ include.class }}">
  {% if include.title %}
  <div class="p-6">
    <h2 class="text-2xl font-bold">{{ include.title }}</h2>
  </div>
  {% endif %}
  
  {% if include.content %}
  <div class="p-6 pt-0">
    <p>{{ include.content }}</p>
  </div>
  {% endif %}
  
  {% if include.body %}
  <div class="p-6">
    {{ include.body }}
  </div>
  {% endif %}
</div>
