<!-- Chat Sidebar Component -->
<aside 
  id="chat-sidebar" 
  class="fixed md:static inset-y-0 left-0 z-40 w-72 bg-card border-r border-border transform -translate-x-full md:translate-x-0 transition-transform duration-300"
  data-collapsed="false"
>
  <!-- Sidebar Header -->
  <div class="p-4 border-b border-border flex items-center justify-between">
    <h2 class="text-lg font-semibold">Conversations</h2>
    <div class="flex items-center gap-2">
      <button 
        id="collapse-sidebar" 
        class="btn btn-secondary btn-small hidden md:block"
        onclick="PilotApp.toggleSidebar()"
        aria-label="Toggle sidebar"
      >
        ◀
      </button>
      <button 
        id="close-sidebar-mobile" 
        class="btn btn-secondary btn-small md:hidden"
        onclick="PilotApp.closeSidebar()"
        aria-label="Close sidebar"
      >
        ✕
      </button>
    </div>
  </div>
  
  <!-- Chat List -->
  <div class="overflow-y-auto h-[calc(100vh-8rem)]">
    <div id="chat-list" class="p-2">
      <!-- Chat items will be populated by JavaScript -->
    </div>
  </div>
  
  <!-- Sidebar Footer -->
  <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-border bg-card">
    <button 
      onclick="PilotApp.openSettings()"
      class="w-full btn btn-secondary btn-small flex items-center justify-center gap-2"
    >
      ⚙️ Settings
    </button>
  </div>
</aside>

<!-- Mobile Sidebar Toggle Button -->
<button 
  id="open-sidebar-mobile"
  class="fixed bottom-4 left-4 md:hidden btn btn-primary z-30"
  onclick="PilotApp.openSidebar()"
  aria-label="Open sidebar"
>
  ☰
</button>

<!-- Sidebar Overlay (Mobile) -->
<div 
  id="sidebar-overlay"
  class="fixed inset-0 bg-black/50 z-30 hidden md:hidden"
  onclick="PilotApp.closeSidebar()"
></div>
